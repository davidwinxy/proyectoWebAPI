@model IEnumerable<ProductosWEB.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="my-4">Listado de Compras</h1>

    <p>
        <a id="CompraCreate" asp-action="Create" class="btn btn-success mb-3">
            <i class="fas fa-plus-circle"></i> Crear Nueva Compra
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.numerodeFactura)</th>
                <th>@Html.DisplayNameFor(model => model.fecha)</th>
                <th>@Html.DisplayNameFor(model => model.precioUnitario)</th>
                <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                <th>@Html.DisplayNameFor(model => model.subTotal)</th>
                <th>@Html.DisplayNameFor(model => model.iva)</th>
                <th>@Html.DisplayNameFor(model => model.total)</th>
                <th>@Html.DisplayNameFor(model => model.idProveedor)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.numerodeFactura)</td>
                    <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.precioUnitario)</td>
                    <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.subTotal)</td>
                    <td>@Html.DisplayFor(modelItem => item.iva)</td>
                    <td>@Html.DisplayFor(modelItem => item.total)</td>
                    <td>@Html.DisplayFor(modelItem => item.idProveedor)</td>
                    <td>
                        <a id="CompraEdit_@item.Id" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a id="CompraDetails_@item.Id" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                        <a id="CompraDelete_@item.Id" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>