@model IEnumerable<proyectoWebAPI.Models.ImagenArticulo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ArticuloId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FileName)
            </th>
            <th>Imagen</th> <!-- Nueva columna para la imagen -->
            <th>
                @Html.DisplayNameFor(model => model.First().ContentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticuloId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    <img src="@($"data:{item.ContentType};base64,{Convert.ToBase64String(item.ImageData)}")" alt="Imagen" style="width:100px;height:auto;" /> <!-- Mostrar la imagen -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
