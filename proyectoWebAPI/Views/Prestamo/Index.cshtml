@model IEnumerable<ProductosWEB.Models.Prestamo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a id="ArticuloCreate" asp-action="Create" class="btn btn-success"> 
        <i class="fas fa-plus-circle"></i> Crear Nuevo
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.usuario_Id)</th>
            <th>@Html.DisplayNameFor(model => model.articulo_Id)</th>
            <th>@Html.DisplayNameFor(model => model.fecha_Prestamo)</th>
            <th>@Html.DisplayNameFor(model => model.fecha_devolucion)</th>
            <th>@Html.DisplayNameFor(model => model.estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.usuario_Id)</td>
            <td>@Html.DisplayFor(modelItem => item.articulo_Id)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_Prestamo)</td>
            <td>@Html.DisplayFor(modelItem => item.fecha_devolucion)</td>
            <td>@Html.DisplayFor(modelItem => item.estado)</td>
            <td>
                <a id="ArticuloEdit-@item.Id" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a id="ArticuloDetails-@item.Id" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                    <i class="fas fa-info-circle"></i> Detalles
                </a>
                <a id="ArticuloDelete-@item.Id" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
